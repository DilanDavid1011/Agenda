<p id="notice"><%= notice %></p>

<h1>Personas</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Nombre</th>
      <th>Segundo nombre</th>
      <th>Apellido</th>
      <th>Segundo Apellido</th>
      <th>Direccion</th>
      <th>Correo</th>
      <th>Fecha de nacimiento</th>
      <th>Opciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |p| %>
      <tr>
        <td><%= p.nombre %></td>
        <td><%= p.segundo_nombre %></td>
        <td><%= p.apellido %></td>
        <td><%= p.segundo_apellido%></td>
        <td><%= p.direccion %></td>
        <td><%= p.correo %></td>
        <td><%= p.f_nacimiento %></td>
        <td><%= link_to 'Mostrar', p, class:'btn btn-primary' %></td>
        <td><%= link_to 'Editar', edit_person_path(p), class:'btn btn-primary' %></td>
        <td><%= link_to 'Borrar', p, method: :delete, data: { confirm: 'Desear eliminar a esta persona?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Crear Persona', new_person_path, class:'btn btn-primary mb-3' %>
